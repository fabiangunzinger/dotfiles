	backend=biber,
    bibencoding=utf8,
	style=authoryear,
	maxcitenames=2,
    maxbibnames=30,
	isbn=false,
	eprint=false,
	url=true
]{biblatex}

\renewcommand*{\multicitedelim}{,\space}
\DeclareFieldFormat[techreport,report,unpublished]{title}{\mkbibquote{#1}}
\AtEveryBibitem{% Clean up the bibtex rather than editing it
 \clearfield{date}
 \clearfield{eprint}
 \clearfield{isbn}
 \clearfield{issn}
 \clearfield{month}
 \clearfield{note}
 \clearfield{language}
 \ifentrytype{article}{
  \clearfield{url}
  \clearfield{doi}
 }
}

